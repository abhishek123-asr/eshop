
<style>
  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background-color: #f8f9fa;
  }

  .signup-card {
    background-color: #ffffff;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    padding: 2rem;
    width: 100%;
    max-width: 400px;
  }

  .signup-title {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #555;
  }

  .form-control {
    border-radius: 25px;
    padding: 0.75rem 1.25rem;
    border: 1px solid #ced4da;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
  }

  .form-text {
    font-size: 0.875rem;
  }

  .login-signup {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btn {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .btn-dark {
    background-color: #333;
    border-color: #333;
  }

  .btn-dark:hover {
    background-color: #222;
    border-color: #222;
  }

  .btn-outline-secondary {
    color: #6c757d;
    border-color: #6c757d;
  }

  .btn-outline-secondary:hover {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
  }
</style>

<div class="signup-container">
  <div class="signup-card">
    <h2 class="signup-title">Sign Up</h2>
    <form id="registrationForm" class="needs-validation" action="signup" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Choose a email" name="email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Choose a Password">
        <div class="invalid-feedback">Please enter a password.</div>
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" required placeholder="Confirm Password">
        <div class="invalid-feedback" id="passwordMismatch" style="display: none;">Passwords do not match.</div>
      </div>
      <div class="login-signup">
        <button type="submit" class="btn btn-dark" style="background-color: #007bff; border-color:#007bff">Sign Up</button>
        <a href="/login" class="btn btn-outline-secondary" >Login</a>
      </div>
    </form>
  </div>
</div>
