<section class="cart-section">
  <div class="container">
    <h1 class="cart-title">Your Cart</h1>

    <div class="cart-table">
      <div class="cart-header">
        <div class="cart-row">
          <div class="cart-cell">Item</div>
          <div class="cart-cell"></div>
          <div class="cart-cell">Price</div>
          <div class="cart-cell">Quantity</div>
          <div class="cart-cell">Sub Total</div>
          <div class="cart-cell"></div>
        </div>
      </div>
      <div class="cart-body">
        {{#each cartProducts}}
        <div class="cart-row" id="row_{{this.item}}">
          <div class="cart-cell item-cell">
            <img style="width:30px; height:auto;" src="../images/product-images/{{this.CartItems._id}}.jpg" alt="{{this.CartItems.pname}}">
            <span>{{this.CartItems.pname}}</span>
          </div>
          <div class="cart-cell">₹{{this.CartItems.price}}</div>
          <div class="cart-cell">
            <div class="quantity-control">
              <button class="quantity-btn" onclick="changeQuantity('{{this._id}}','{{this.item}}','{{../user._id}}',-1)">-</button>
              <span id="{{this.item}}" class="quantity-display">{{this.quantity}}</span>
              <button class="quantity-btn" onclick="changeQuantity('{{this._id}}','{{this.item}}','{{../user._id}}',1)">+</button>
            </div>
          </div>
          <div class="cart-cell" id="subtotal_{{this.item}}">₹{{this.total}}</div>
          <div class="cart-cell">
            <button class="btn-remove" onclick="removeProduct('{{this._id}}','{{this.item}}','{{../user._id}}')">Remove</button>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="cart-footer">
        <div class="cart-row">
          <div class="cart-cell"></div>
          <div class="cart-cell"></div>
          <div class="cart-cell">Total Price:</div>
          <div class="cart-cell" id="totalPrice"><strong>₹ {{totalcartamount}}</strong></div>
          <div class="cart-cell"></div>
        </div>
      </div>
    </div>

    <div class="cart-actions">
      <a href='/' class="btn btn-secondary">Continue Shopping</a>
      <a href='/checkout' class="btn btn-primary">Place Order</a>
    </div>
  </div>
</section>

<style>
  .cart-section {
    padding: 3rem 0;
    background-color: #f8f9fa;
  }

  .container {
    max-width: 1200px;
