<section>
  <div class="container mt-5">
    <div class="row">
      <div class="col text-end">
        <a href="/admin/addproducts" class="btn btn-outline-dark">Add Products</a>
      </div>

    </div>

    <table class="table table-sm mt-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Name</th>
          <th scope="col">Brand</th>
          <th scope="col">Price</th>
          <th scope="col">Photo</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>

          <td>{{increment @index}}</td>
          <td>{{this.pname}}</td>
          <td>{{this.brand}}</td>
          <td>{{this.price}}</td>
          <td><img src="../images/product-images/{{this._id}}.jpg" width="50px" height="50px" alt="Product Image"></td>
          <td>
            <a href="edit-product/{{this._id}}" class="btn btn-secondary action-button" ><i
                class="bi bi-pencil-square"></i></a>
            <a href="delete-product/{{this._id}}" class="btn btn-secondary action-button" onclick="return confirm('Are you sure delete {{this.pname}}?')"><i
                class="bi bi-trash3-fill"></i></a>
          </td>



        </tr>

        {{/each}}
      </tbody>
    </table>
  </div>
</section>