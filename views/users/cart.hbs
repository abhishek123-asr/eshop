    background-color: #f8f9fa;
    font-weight: 600;
    color: #495057;
  }

  .item-cell {
    display: flex;
    align-items: center;
    flex: 2;
  }

  .item-cell img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 2px;
    margin-right: 1rem;
  }

  .quantity-control {
    display: flex;
    align-items: center;
    width: 120px;
  }

  .quantity-btn {
    background-color: #e9ecef;
    border: none;
    color: #495057;
    font-size: 1.2rem;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .quantity-btn:hover {
